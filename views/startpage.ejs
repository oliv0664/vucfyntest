<html>
<head>
    
    <script src="/jquery/jquery-3.2.1.min.js"></script>
    
    <style>
        
/*        styling af page_header*/
        #h3_1, #h3_2 {
            display: inline-block; 
            margin-top: 50px; 
        }
        
        #h3_1 {
            margin-left: 50px; 
        }
        
        #h3_2 {
            float: right; 
            margin-right: 50px; 
        }
        
        
        
/*        styling og positionering af body og subsection*/
        #section, #subsection {
            position: relative; 
            left: 50px; 
        }
        
        #section {
            top: 150px; 
        }
        
        #name_h1 {
            margin-top: 80px;  
        }
        
        #subsection { 
            top: 300px; 
        }
        
        
        
/*        styling af main section input*/
        #date_h1, #date_input {
            display: inline-block; 
        }
        
        #name_h1, .name_input {
            display: inline-block; 
        }
        
        #date_input, .name_input { 
            font-size: 25px; 
            height: 1.5em;
            font-weight: bold; 
        }
        
        
        
/*        styling af subsection input*/
        #dys_select, #fam_select, #tong_input, #home_input {
            font-size: 20px; 
            height: 1.5em; 
            font-weight: bold; 
        }
        
        h2:nth-of-type(1), #dys_select {
            display: inline-block; 
        }
        
        h2:nth-of-type(2), #fam_select {
            display: inline-block; 
        }
        
        h2:nth-of-type(3), #tong_input {
            display: inline-block; 
        }
        
        h2:nth-of-type(4), #home_input {
            display: inline-block; 
        }
        
        #date, #name, #dys, #fam, #tong, #home {
            width: 100%; 
        }
        
        #bottom {
            position: relative; 
            top: 350px; 
            left: 50px; 
            margin-bottom: 50px; 
        }
        
        input[type=submit] {
            font-size: 25px; 
            height: 1.5em; 
        }
        
    </style>
    
</head>
<body>
    
    <div id="head">
        <h3 id="h3_1">NIVEAUAFKLARINGSTEST</h3>
        <h3 id="h3_2">VUC FYN ODENSE</h3>
    </div>
    
    
    <form id="form" method="post" action="/startpage_addinfo">
    
        <div id="section">
            <div id="date">
                <h1 id="date_h1">DATO:</h1>
                <input type="date" id="date_input", name="date_input">
            </div>
                
            <div id="name">
                <h1 id="name_h1">NAVN:</h1>
                <input type="text" class="name_input" name="firstname" placeholder="Fornavn(e)">
                <input type="text" class="name_input" name="lastname" placeholder="Efternavn">
            </div>
        </div>


        <div id="subsection">
            <div id="dys">
                <h2>ER DU ORDBLIND:</h2>
                <select id="dys_select" name="dys_select" form="form">
                    <option value="ja">JA</option>
                    <option value="nej">NEJ</option>
                </select>
            </div>
            
            <div id="fam">
                <h2>ER DER ORDBLINDHED I DIN FAMILIE:</h2>
                <select id="fam_select" name="fam_select" form="form">
                    <option value="ja">JA</option>
                    <option value="nej">NEJ</option>
                </select>
            </div>
            
            <div id="tong">
                <h2>HVAD ER DIT MODERSMÃ…L:</h2>
                <input type="text" id="tong_input" name="tong_input" placeholder="Indtast">
            </div>
                
            <div id="home">
                <h2>HVILKET SPROG TALER DU DERHJEMME:</h2>
                <input type="text" id="home_input" name="home_input" placeholder="Indtast">
            </div>
        </div>
        
        <div id="bottom">
            <input type="submit" value="Gem/Videre">
        </div>
        
    </form>
    
    
</body>
</html>